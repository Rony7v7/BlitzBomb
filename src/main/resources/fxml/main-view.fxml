<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="1000" style="-fx-background-color: BLACK;" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.MainViewController">
    <children>
      <ImageView fitHeight="578.0" fitWidth="562.0" layoutX="434.0" layoutY="22.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/BackgroundMenu.gif" />
         </image></ImageView>
      <ImageView fitHeight="303.0" fitWidth="530.0" layoutX="23.0" layoutY="-28.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/mainTitle.png" />
         </image>
      </ImageView>
      <VBox layoutX="44.0" layoutY="247.0" prefHeight="62.0" prefWidth="245.0">
         <children>
            <Label style="-fx-padding: 5;" text="Enter Nickname" textFill="WHITE" />
            <TextField fx:id="nameInput" prefHeight="25.0" prefWidth="192.0" promptText="nickname" style="-fx-padding: 5;" />
         </children>
      </VBox>
      <VBox layoutX="44.0" layoutY="327.0" prefHeight="153.0" prefWidth="245.0" style="-fx-spacing: 10;">
         <children>
              <Button fx:id="playBTN" onAction="#play" prefHeight="37.0" prefWidth="192.0" styleClass="menu-button" stylesheets="@../styles/style.css" text="Play" />
            <Button onAction="#setDifficulty" prefHeight="37.0" prefWidth="192.0" styleClass="menu-button" stylesheets="@../styles/style.css" text="Set Difficulty" />
            <Button onAction="#setGraph" prefHeight="37.0" prefWidth="192.0" styleClass="menu-button" stylesheets="@../styles/style.css" text="Set Graph" />
         </children>
      </VBox>
    </children>
</AnchorPane>
